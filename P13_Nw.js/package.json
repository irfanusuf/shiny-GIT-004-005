{
  "name": "my-nwjs-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop app built with NW.js",
  "main": "index.html",
  "scripts": {
    "start": "nw .",
    "build:linux64": "nwbuild . --platform linux64 --flavor normal --output dist/linux64",
    "build:linux32": "nwbuild . --platform linux32 --flavor normal --output dist/linux32",
    "build:win64": "nwbuild . --platform win64 --flavor normal --output dist/win64",
    "build:win32": "nwbuild . --platform win32 --flavor normal --output dist/win32",
    "build:osx64": "nwbuild . --platform osx64 --flavor normal --output dist/osx64",
    "build:all": "npm run build:linux64 && npm run build:linux32 && npm run build:win64 && npm run build:win32 && npm run build:osx64"
  },
  "window": {
    "title": "My NW.js App",
    "icon": "icon.png",
    "width": 800,
    "height": 600,
    "position": "center",
    "toolbar": false,
    "resizable": true,
    "fullscreen": false
  },
  "build": {
    "nwVersion": "0.104.0",
    "nwFlavor": "normal",
    "targets": [
      "linux64",
      "linux32",
      "win64",
      "win32",
      "osx64"
    ],
    "output": "dist"
  },
  "keywords": [
    "nwjs",
    "desktop",
    "cross-platform",
    "app"
  ],
  "author": "Irfan Yousuf",
  "license": "MIT",
  "devDependencies": {
    "nw-builder": "^4.6.0"

  }
}
